<Page x:Class="MusicApp.recorder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:MusicApp"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      mc:Ignorable="d">

    <Grid>
        <Grid Margin="24 80"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image x:Name="Recorder"
                   Grid.ColumnSpan="3"
                   Source="Assets/Images/recorder.jpg" />

            <Button x:ConnectionId='1' x:Name="Rec1"
                    Grid.Row="1"
                    Width="78"
                    Height="80"
                    Margin="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="Black"
                                       />
            <Button x:ConnectionId='2' x:Name="Rec4"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="78"
                    Height="80"
                    Margin="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="#FF1D1D1D"
                                       />
            <Button x:ConnectionId='3' x:Name="Rec7"
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="78"
                    Height="79"
                    Margin="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="#FF020202"
                                       />

            <Button x:ConnectionId='4' x:Name="Rec2"
                    Grid.Row="2"
                    Width="78"
                    Height="80"
                    Margin="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="Black"
                                       />
            <Button x:ConnectionId='5' x:Name="Rec5"
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="78"
                    Height="79"
                    Margin="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="Black"
                                       />
            <Button x:ConnectionId='6' x:Name="Rec8"
                    Grid.Row="2"
                    Grid.Column="2"
                    Width="78"
                    Height="80"
                    Margin="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="#FF1D1D1D"
                                       />
            <Button x:ConnectionId='7' x:Name="Rec3"
                    Grid.Row="3"
                    Width="78"
                    Height="79"
                    Margin="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="#FF020202"
                                       />
            <Button x:ConnectionId='8' x:Name="Rec6"
                    Grid.Row="3"
                    Grid.Column="1"
                    Width="78"
                    Height="80"
                    Margin="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="Black"
                                       />
        </Grid>




        <MediaElement x:Name="myMediaElement"
                      Width="20"
                      Height="20"
                      DefaultPlaybackRate="2.5"
                      Visibility="Collapsed" />


    </Grid>
</Page>           

