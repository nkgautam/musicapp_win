<Page x:Class="MusicApp.drum"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:MusicApp"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      mc:Ignorable="d">

    <Grid Background="Transparent">

        <Grid Margin="24 80"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image x:Name="Drum"
                   Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Source="Assets/Images/drum.png" />
            <Button x:ConnectionId='1' x:Name="Drum1"
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="150"
                    Height="175"
                    Margin="12"
                    HorizontalAlignment="Center"
                    BorderBrush="#FF020202"
                                        />
            <Button x:ConnectionId='2' x:Name="Drum2"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="150"
                    Height="175"
                    Margin="12"
                    HorizontalAlignment="Center"
                    BorderBrush="#FF1D1D1D"
                                        />
        </Grid>




        <MediaElement x:Name="myMediaElement"
                      Width="20"
                      Height="20"
                      DefaultPlaybackRate="2.5"
                      Visibility="Collapsed" />

    </Grid>
</Page>

