<Page x:Class="MusicApp.UserProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:MusicApp"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Grid>
        <Grid x:Name="LayoutLogin" Background="#FFEEEEEE">
            <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                <TextBlock Margin="24"
                           FontSize="30"
                           Foreground="Black"
                           Text="Login Page" />
                <TextBlock Margin="24 12"
                           FontSize="20"
                           Foreground="Black"
                           Text="Email ID" />
                <TextBox x:Name="txtEmail"
                         Margin="24 0"
                         BorderBrush="#888888"
                         BorderThickness="1"
                         FontSize="20" />
                <TextBlock Margin="24 24 24 12"
                           FontSize="20"
                           Foreground="Black"
                           Text="Password" />
                <PasswordBox x:Name="txtPass"
                             Margin="24 0"
                             BorderBrush="#888888"
                             BorderThickness="1"
                             FontSize="20" />
                <Button x:Name="btnLogin"
                        Margin="24 24 24 0"
                        HorizontalAlignment="Stretch"
                        Background="#3997a4"
                        Content="Login"
                        FontSize="20"
                        Foreground="White" />
                <Button x:Name="btnRegister"
                        Margin="24 0"
                        HorizontalAlignment="Stretch"
                        Background="#3997a4"
                        Content="Registation"
                        FontSize="20"
                        Foreground="White" />
            </StackPanel>
        </Grid>
        <Grid x:Name="layoutData" Background="#FFEEEEEE">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock x:Name="TitleUser"
                       Margin="24"
                       HorizontalAlignment="Left"
                       FontSize="20"
                       Foreground="Black"
                       Text="User: "
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
            <Button x:Name="btnLogout"
                    Margin="12 0"
                    HorizontalAlignment="Right"
                    Background="#3997a4"
                    Content="Logout"
                    FontSize="20"
                    Foreground="White" />
            <Grid Grid.Row="1" Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border BorderBrush="#888888" BorderThickness="1 1 0 1">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="Black"
                               Text="Numbers" />
                </Border>
                <Border Grid.Column="1"
                        BorderBrush="#888888"
                        BorderThickness="1 1 1 1">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="Black"
                               Text="Instruments" />
                </Border>
                <Border Grid.Column="2"
                        BorderBrush="#888888"
                        BorderThickness="0 1">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="Black"
                               Text="Start" />
                </Border>
                <Border Grid.Column="3"
                        BorderBrush="#888888"
                        BorderThickness="1">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="Black"
                               Text="End" />
                </Border>
            </Grid>
            <ListBox Grid.Row="2"
                     Background="Transparent"
                     ItemsSource="{Binding ListRecord}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="60">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       Foreground="Black"
                                       Text="{Binding Id}" />

                            <TextBlock Grid.Column="1"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       Foreground="Black"
                                       Text="{Binding Instrument}" />
                            <TextBlock Grid.Column="2"
                                       Margin="3 0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       Foreground="Black"
                                       Text="{Binding Start}"
                                       TextWrapping="Wrap" />
                            <TextBlock Grid.Column="3"
                                       Margin="3 0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       Foreground="Black"
                                       Text="{Binding End}"
                                       TextWrapping="Wrap" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>

</Page>

